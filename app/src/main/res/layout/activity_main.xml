<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6E7177"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|right"
        android:textColor="#3912E4"
        android:textStyle="bold"

        android:textSize="35sp"
        android:background="#2BE493"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="10dp"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="AC"
            android:layout_margin="5dp"
            android:textColor="#FF0000"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="^"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="35dp"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="â†’"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="35dp"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="/"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />


    </LinearLayout>





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="7"
            android:layout_margin="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="8"
            android:layout_margin="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="9"
            android:layout_margin="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="x"
            android:layout_margin="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />
    </LinearLayout>





    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="4"
            android:layout_margin="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="5"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="6"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/min"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="-"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="1"
            android:layout_margin="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="2"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="3"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="+"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />
    </LinearLayout>






    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4" >

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="0"
            android:layout_margin="5dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="."
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="Ans"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="23dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:text="="
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textSize="35dp"
            android:onClick="ButtonClick"
            android:background="@drawable/key"
            />


    </LinearLayout>



</LinearLayout>